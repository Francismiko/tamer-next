generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl    = env("DIRECT_URL")
}

model Plan {
  id         Int       @id @default(autoincrement())
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  owner      String?
  target     String?
  content    String?
  key_result String?
  deadline   DateTime?
}
